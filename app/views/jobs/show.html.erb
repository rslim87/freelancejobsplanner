<h3><%= @job.name %>'s information:</h3>

<div>
	Date  and Time of the job: <%= @job.readable_jobdate %>
	<br>
	Pay rate: $<%= @job.payrate %>
	<br>
	Category: 
	<% @job.categories.each do |category| %>
		<%= category.title  %>
	<% end %>
	<br>
	Paid: <%= @job.paid %>
	<br>
	Equipment: <%= @job.equipment %>
	<br>
	Client: <%= link_to "#{@job.client.fullname}", client_path(@job.client) %>
</div>

<div>
<%= link_to "Edit Job", edit_job_path(@job) %>
<%= link_to "Delete Job", job_path(@job), :method => :delete %>
<a href="#" class="js-next" data-id="<%=@job.id%>">Next...</a>
<div>

<div style="margin-top: 15px">
<%= link_to "See all Jobs", jobs_path, class: 'allJobs' %>
</div>

<div class="allJobs">
	<ul>
	</ul>
</div>