	<h1>Log In</h1>
	
<%= form_for @user, :url => url_for(:controller => 'sessions', :action => 'create') do |f| %>

	<p>
		<%= f.label :email %>
		<%= f.email_field :email %>
	</p>
	<p> 
		<%= f.label :password %>
		<%= f.password_field :password %>
	</p>
	<p>
		<%= f.submit "Log in" %>
	</p>
<% end %>